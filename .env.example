# Bridge-MCP Environment Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# JIRA CONFIGURATION
# =============================================================================
# Your Jira instance URL (e.g., https://company.atlassian.net or https://jira.company.com)
JIRA_URL=https://your-jira-instance.com

# Personal Access Token for Jira authentication
# Generate at: Jira Settings > Personal Access Tokens
JIRA_PERSONAL_ACCESS_TOKEN=your_jira_pat_here

# SSL certificate verification (true/false)
# Set to false only if using self-signed certificates
JIRA_VERIFY_SSL=true

# =============================================================================
# GITLAB CONFIGURATION (Coming Soon)
# =============================================================================
# Your GitLab instance URL (default: https://gitlab.com)
GITLAB_URL=https://gitlab.com

# Personal Access Token for GitLab authentication
# Generate at: GitLab Settings > Access Tokens
# Required scopes: api, read_api, read_repository
GITLAB_PERSONAL_ACCESS_TOKEN=your_gitlab_pat_here

# SSL certificate verification (true/false)
GITLAB_VERIFY_SSL=true

# =============================================================================
# CONFLUENCE CONFIGURATION (Coming Soon)
# =============================================================================
# Your Confluence instance URL
CONFLUENCE_URL=https://your-confluence-instance.com

# API Token for Confluence authentication
# Generate at: Atlassian Account Settings > Security > API Tokens
CONFLUENCE_API_TOKEN=your_confluence_api_token_here

# Your Confluence username (email for cloud instances)
CONFLUENCE_USERNAME=your.email@company.com

# SSL certificate verification (true/false)
CONFLUENCE_VERIFY_SSL=true

